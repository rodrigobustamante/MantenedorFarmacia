@model Mantenedor.Models.Usuario
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_Layout.cshtml";
}

@if (Session["correo"] != null)
{
    Response.Redirect("Home/Welcome");
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true);
    if (@ViewBag.Message != null)
    {
        <div>
            @ViewBag.Message
        </div>
    }
    <div class="center">
        <h2>Inicio de sesión:</h2>
        <div class="center">@Html.ValidationMessage("error", null, new { @style = "color: red" })</div>
        <br />
        <div class="row">
            <div class="col s3"></div>
            <div class="col s6">
                <div class="input-field col s12">
                    <label>Correo electrónico:</label>
                    @Html.TextBoxFor(u => u.Correo, new { required = "required" })
                </div>
                <div class="input-field col s12">
                    @Html.ValidationMessageFor(u => u.Correo, null, new { @style = "color: red" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s3"></div>
            <div class="col s6">
                <div class="input-field col s12">
                    <label>Contraseña:</label>
                    @Html.PasswordFor(u => u.Contrasena, new { required = "required" })
                </div>
                <div class="input-field col s12">
                    @Html.ValidationMessageFor(u => u.Contrasena, null, new { @style = "color: red" })
                </div>
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-default orange">Iniciar Sesión</button>
        </div>
    </div>
}
